<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/relative_login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="30sp"
        android:layout_marginTop="50dp"
        android:text="로그인" />

    <EditText
        android:id="@+id/relative_nickname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginTop="50dp"
        android:ems="10"
        android:hint="아이디"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/relative_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_nickname"
        android:ems="10"
        android:hint="비밀번호"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/relative_login_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_below="@id/relative_password"
        android:layout_centerInParent="true"
        android:text="로그인" />

    <ImageView
        android:id="@+id/relative_google_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/relative_login_button"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"
        android:layout_toLeftOf="@id/relative_naver_image"
        app:srcCompat="@drawable/ic_logo_google" />

    <ImageView
        android:id="@+id/relative_naver_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/relative_login_button"
        android:layout_centerInParent="true"
        android:layout_marginTop="30dp"
        app:srcCompat="@drawable/ic_logo_naver" />

    <ImageView
        android:id="@+id/relative_kakao_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_below="@id/relative_login_button"
        android:layout_toRightOf="@id/relative_naver_image"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:srcCompat="@drawable/ic_logo_kakao" />

    <TextView
        android:id="@+id/relative_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_kakao_image"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="30dp"
        android:text="회원가입" />

    <TextView
        android:id="@+id/relative_findpw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/relative_kakao_image"
        android:layout_alignParentRight="true"
        android:layout_marginTop="30dp"
        android:layout_marginRight="120dp"
        android:text="비밀번호 찾기" />
</RelativeLayout>